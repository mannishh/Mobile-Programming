<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="linearlayout"/>

    <Button
        android:layout_toRightOf="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/relative_layout"
        android:text="relativelayout"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_layout"
        android:layout_below="@+id/linear_layout"
        android:text="constraintlayout"/>


    <Button
        android:layout_below="@+id/relative_layout"
        android:layout_marginLeft="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table_layout"
        android:text="tablelayout"/>

    <Button
        android:id="@+id/absolute_layout"
        android:layout_below="@+id/constraint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="absolutelayout"/>

    <Button
        android:layout_below="@+id/constraint_layout"
        android:layout_toRightOf="@+id/absolute_layout"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:text="edit text"/>

    <Button
        android:layout_below="@+id/absolute_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view"
        android:text="text view"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="checkbox"
        android:id="@+id/checkbox"
        android:layout_below="@+id/absolute_layout"
        android:layout_toRightOf="@+id/text_view"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="radiobtn"
        android:id="@+id/radio_button"
        android:layout_below="@+id/absolute_layout"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spinner"
        android:id="@+id/btn_spinner"
        android:layout_below="@+id/text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="form"
        android:id="@+id/form11"
        android:layout_below="@+id/text_view"
        android:layout_toRightOf="@+id/btn_spinner"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="activity_lifecycle"
        android:layout_below="@+id/text_view"
        android:layout_toRightOf="@+id/form11"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database"
        android:id="@+id/database"
        android:layout_below="@+id/btn_spinner" />











</RelativeLayout>